// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // Used for migrations with Neon/Vercel Postgres
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  password        String // Simplified for MVP
  image           String?
  role            String   @default("USER") // USER, ADMIN
  
  couple          Couple?  @relation(fields: [coupleId], references: [id])
  coupleId        String?

  goals           Goal[]   @relation("UserGoals")
  
  sentInvites     Invite[] @relation("SentInvites")
  receivedInvites Invite[] @relation("ReceivedInvites")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Couple {
  id        String   @id @default(cuid())
  users     User[]
  goals     Goal[]   @relation("CoupleGoals")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Goal {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  targetDate  DateTime?
  
  type        String // INDIVIDUAL or JOINT
  
  userId      String?
  user        User?    @relation("UserGoals", fields: [userId], references: [id])
  
  coupleId    String?
  couple      Couple?  @relation("CoupleGoals", fields: [coupleId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invite {
  id          String   @id @default(cuid())
  email       String // Email of the receiver
  
  senderId    String
  sender      User     @relation("SentInvites", fields: [senderId], references: [id])
  
  receiverId  String?
  receiver    User?    @relation("ReceivedInvites", fields: [receiverId], references: [id])
  
  status      String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
